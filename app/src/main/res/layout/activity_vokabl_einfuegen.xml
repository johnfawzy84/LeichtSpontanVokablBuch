<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".VokablEinfuegen">

    <TextView
        android:id="@+id/AppTitle"
        android:text="@string/AppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#3f79ff"
        android:textColor= "#0f0f0f"
        android:textSize="32px"
        />
    
    <TextView
        android:id = "@+id/NeuWortTitle"
        android:text="@string/NeuWortTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28px"
        android:layout_marginTop="10pt"

        android:layout_below="@id/AppTitle"/>
    

    <EditText
        android:id="@+id/NeuWort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25px"
        android:layout_toRightOf="@id/NeuWortTitle"
        android:layout_alignBaseline="@id/NeuWortTitle"
        android:layout_marginLeft="10pt"
        />

    <TextView
        android:id = "@+id/UeberzetungTitle"
        android:text="@string/UeberzetungTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28px"
        android:layout_marginTop="10pt"

        android:layout_below="@id/NeuWortTitle"/>


    <EditText
        android:id="@+id/Ueberzetung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25px"
        android:layout_toRightOf="@id/UeberzetungTitle"
        android:layout_alignBaseline="@id/UeberzetungTitle"
        android:layout_marginLeft="10pt"

        />


    <TextView
        android:id = "@+id/AnwendungTitle"
        android:text="@string/AnwendungTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10pt"
        android:textSize="28px"

        android:layout_below="@id/UeberzetungTitle"/>


    <EditText
        android:id="@+id/Anwendung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25px"
        android:layout_toRightOf="@id/AnwendungTitle"
        android:layout_alignBaseline="@id/AnwendungTitle"
        android:layout_marginLeft="10pt"

        />


</RelativeLayout>
